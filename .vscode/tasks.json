{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Fastapi Backend",
      "type": "shell",
      "command": "uv run uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "React Dev",
      "type": "shell",
      "command": "cd frontend && npm run dev -- --host 0.0.0.0",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Pytest Tests",
      "type": "shell",
      "command": "uv run pytest -vs",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "npm build",
      "type": "shell",
      "command": "cd frontend && npm run build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Fastapi + React",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Fastapi Backend",
        "React Dev"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
  ]
}